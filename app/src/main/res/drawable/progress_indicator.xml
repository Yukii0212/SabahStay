<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Select Payment Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
            <size android:width="10dp" android:height="10dp"/>
        </shape>
    </item>

    <!-- Payment Circle -->
    <item android:left="50dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
            <size android:width="10dp" android:height="10dp"/>
        </shape>
    </item>

    <!-- Confirmation Circle (Hollow) -->
    <item android:left="100dp">
        <shape android:shape="oval">
            <size android:width="10dp" android:height="10dp"/>
            <stroke android:color="#FFFFFF" android:width="2dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Connecting Lines -->
    <item android:left="10dp" android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <size android:width="40dp" android:height="2dp"/>
        </shape>
    </item>

    <item android:left="60dp" android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <size android:width="40dp" android:height="2dp"/>
        </shape>
    </item>

</layer-list>
