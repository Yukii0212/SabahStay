<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#002B7F"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/home_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/home_button"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reservation_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/reservation_icon"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:src="@drawable/calendar_button"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/reservation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation"
            android:paddingRight="2dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/service_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/service_icon"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:src="@drawable/service_button"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/service_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/account_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/account_icon"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:src="@drawable/account_button"
            app:tint="@android:color/white"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>
