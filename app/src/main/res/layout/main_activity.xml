<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232946">

    <!-- BACKGROUND CLOUDS (Behind Mountain) -->
    <ImageView
        android:id="@+id/cloudsView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/clouds" />

    <ImageView
        android:id="@+id/cloudsView1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/clouds"
        android:alpha="0.7"/>

    <ImageView
        android:id="@+id/cloudsView2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/clouds"
        android:alpha="0.6"/>

    <!-- MOUNTAIN (Now in front of clouds) -->
    <ImageView
        android:id="@+id/mountainView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/mountain"
        android:alpha="0.5" />

    <!-- FOREGROUND CLOUDS (Optional, to create depth) -->
    <ImageView
        android:id="@+id/cloudsView3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/clouds"
        android:alpha="0.8"/>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SABAH STAY"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:fontFamily="@font/inter"
        android:layout_marginTop="16dp"
        android:layout_below="@id/mountainView"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />



    <!-- WELCOME TO SABAH Text (Keeps original position) -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO SABAH"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="@font/alegreya_sc"
        android:layout_below="@id/titleText"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />


</RelativeLayout>
